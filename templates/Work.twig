{% set prefix = "app_production_work" %}
{% set key = "#{prefix}_#{index}" %}
<tr id="{{ key }}">

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "name" %}
        <input type="text"
               name="{{ key }}"
               value="{{ work.name }}"
               class="widefat"
               placeholder="Name"/>
    </td>

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "role" %}
        <input type="text"
               name="{{ key }}"
               value="{{ work.role }}"
               class="widefat"
               placeholder="Role"/>
    </td>

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "months" %}
        <input type="text"
               name="{{ key }}"
               value="{{ work.months }}"
               class="widefat"
               placeholder="Months"/>
    </td>

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "hoursPerDay" %}
        <input type="text"
               name="{{ key }}"
               value="{{ work.hoursPerDay }}"
               class="widefat"
               placeholder="hours/day"/>
    </td>

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "remove" %}
        <a name="{{ key }}"
           class="button button-small"
           onclick="appProductionMeta.removeDidClick(event)">
            <div class="dashicons-before dashicons-trash"></div>
        </a>
    </td>

    <td>
        {% set key = "#{prefix}_#{index}_" ~ "add" %}
        <a name="{{ key }}"
           class="button button-small"
           onclick="appProductionMeta.addDidClick(event)">
            <div class="dashicons-before dashicons-plus"></div>
        </a>
    </td>

</tr>